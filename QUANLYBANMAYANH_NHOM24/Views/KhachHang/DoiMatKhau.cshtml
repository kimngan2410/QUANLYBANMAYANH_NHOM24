
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<link rel="stylesheet" type="text/css" href="./../css/DoiMatKhau.css">

<div class="breadcrumb">
    <a href="@Url.Action("Index", "KhachVangLai")" class="home">Trang chủ</a>
    <span class="dot">•</span>
    <a href="@Url.Action("CapNhatThongTin", "KhachHang")" class="account">Tài khoản</a>
    <span class="dot">•</span>
    <a class="password">Đổi mật khẩu</a>
</div>

<div class="profile-container mt-5">
    <div class="sidebar col-md-6">
        <div class="avtar-name-user">
            <img src="./../images/user_avatar.png" />
            <h2>Lê Thị Kim Ngân</h2>
        </div>
        <ul>
            <li class="acc-menu-items">
                <a href="@Url.Action("CapNhatThongTin", "KhachHang")" class="user">
                    <i class="fa-solid fa-circle-user"></i>
                    <span>Thông tin cá nhân</span>
                </a>
            </li>
            <li class="acc-menu-items">
                <a href="@Url.Action("LichSuDonHang", "KhachHang")" class="order">
                    <i class="fa-solid fa-clipboard"></i>
                    <span>Đơn hàng</span>
                </a>
            </li>
            <li class="acc-menu-items">
                <a href="@Url.Action("DiaChiNhanHang", "KhachHang")" class="address">
                    <i class="fa-solid fa-location-dot"></i>
                    <span>Địa chỉ giao hàng</span>
                </a>
            </li>
            <li class="acc-menu-items">
                <a href="@Url.Action("DoiMatKhau", "KhachHang")" class="change-pass">
                    <i class="fa-solid fa-lock"></i>
                    <span>Đổi mật khẩu</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="changepass-container col-md-6">
        <h2>Đổi mật khẩu</h2>

        <!-- Hiển thị thông báo lỗi hoặc thành công -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }

        <div class="change-pass-input">
            <form method="post">
                <div class="form-group">
                    <input type="password" name="pass-old" placeholder="Nhập mật khẩu hiện tại" required />
                    <div class="f-lock">
                        <img src="./../images/eye_view.png" alt="Eye" />
                        <img src="./../images/eye_hide.png" alt="Eye" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" name="pass-new" placeholder="Nhập mật khẩu mới" required />
                    <div class="f-lock">
                        <img src="./../images/eye_view.png" alt="Eye" />
                        <img src="./../images/eye_hide.png" alt="Eye" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" name="pass-new-confirm" placeholder="Nhập lại mật khẩu mới" required />
                    <div class="f-lock">
                        <img src="./../images/eye_view.png" alt="Eye" />
                        <img src="./../images/eye_hide.png" alt="Eye" />
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-change">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>




<!-------------  Scrip  t--------------->
<script>
    document.querySelectorAll('.f-lock').forEach((lock) => {
        const input = lock.previousElementSibling;
        const [viewIcon, hideIcon] = lock.querySelectorAll('img');

        lock.addEventListener('click', () => {
            if (input.type === 'password') {
                input.type = 'text';
                viewIcon.style.opacity = 1;
                hideIcon.style.opacity = 0;
            } else {
                input.type = 'password';
                viewIcon.style.opacity = 0;
                hideIcon.style.opacity = 1;
            }
        });
    });

</script>


</div>

