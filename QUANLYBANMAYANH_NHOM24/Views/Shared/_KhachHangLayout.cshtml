<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["TrangChu"]Cửa hàng máy ảnh</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/KhachHangLayout.css")" />

</head>

<body>
    <!-- Header -->
    <header>
        <div class="top-header">
            <div class="logo">
                <img src="@Url.Content("~/images/logo.png")" alt="HaiCoNangSlay">
                <div class="name-store">
                    <p>Tiệm ảnh</p>
                    <h2>HaiCoNangSlay</h2>
                </div>
            </div>
            <div class="search-box">
                <form action="/search" method="GET">
                    <input type="text" name="query" placeholder="Tìm kiếm" />
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="user-actions">
                <a href="#" data-bs-toggle="modal" data-bs-target="#LoginMenu">
                    <img class="icon-user" src="@Url.Content("~/images/user.png")" alt="Icon User">
                </a>
                <a href="@Url.Action("GioHang_2", "KhachHang")">
                    <div class="cart">
                        <img class="icon-cart" src="@Url.Content("~/images/shopping-cart.png")" alt="Icon Cart">
                        <span class="cart-count" id="cart-count">@ViewBag.TongSoLuong</span> <!-- Số lượng sẽ thay đổi động -->
                    </div>

                </a>
                <a href="#">
                    <div class="heart">
                        <img class="icon-heart" src="@Url.Content("~/images/heart.png")" alt="Icon Heart">
                        <span class="heart-count" id="cart-count">0</span> <!-- Số lượng sẽ thay đổi động -->
                    </div>
                </a>
            </div>
        </div>

        <!-- Navbar -->
        <div class="navbar-header">
            <div class="dropdown">
                <button class="dropbtn">
                    <i class="fa-solid fa-bars"></i>Danh mục sản phẩm <i class="fa-solid fa-chevron-down"></i>
                </button>

                <!------ Danh mục sản phẩm ------->
                <div class="dropdown-content">
                    <div class="wrap_main d-none d-lg-block d-xl-block">
                        <div class="bg-header-nav">
                            <div class="rows row-noGutter-2">
                                <nav class="header-nav">
                                    @await Component.InvokeAsync("DanhMuc")
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!------ Nav Link ------->
            <div class="nav-link">
                <a href="#">Trang chủ</a>
                <a href="#">Giới thiệu</a>
                <a href="#">Sản phẩm</a>
                <a href="#">Liên hệ</a>
            </div>
            <div class="contact">
                <img src="@Url.Content("~/images/phone-call.png")" alt="Icon Phone Call" />
                <div class="contact-phone">
                    <p class="phone-label">Gọi ngay:</p>
                    <p class="phone-number">0888-645-678</p>
                </div>
            </div>
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section about">
                <div class="footer-logo">
                    <img src="./../images/logo.png" alt="HaiCoNangSlay">
                    <div class="footer-name-store">
                        <p>Tiệm ảnh</p>
                        <h2>HaiCoNangSlay</h2>
                    </div>
                </div>
                <p class="txtAbout">Tiệm Ảnh 2 Cô Nàng Slay – nơi tạo nên những bức ảnh đẹp và đậm chất riêng.</p>
                <div class="footer-social">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
            </div>

            <div class="footer-section">
                <h4 class="footer-list">Danh mục</h4>
                <ul>
                    <li><a href="#">Máy ảnh</a></li>
                    <li><a href="#">Ống kính</a></li>
                    <li><a href="#">Phụ kiện máy ảnh</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4 class="footer-help">Hỗ trợ</h4>
                <ul>
                    <li><a href="#">Hỏi đáp</a></li>
                    <li><a href="#">Chính sách giao hàng</a></li>
                    <li><a href="#">Chính sách đổi trả</a></li>
                    <li><a href="#">Điều khoản và chính sách</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4 class="footer-contact">Liên hệ</h4>
                <ul>
                    <li><a href="#"><i class="fas fa-phone"></i> 0894-131-1213</a></li>
                    <li><a href="#"><i class="fas fa-envelope"></i> haiconangslay@gmail.com</a></li>
                    <li><a href="#"><i class="fas fa-map-marker-alt"></i> 51 Thanh Thủy, Thanh Bình, Hải Châu, Đà Nẵng</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <!-- Modal đăng nhập, đăng ký -->
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "KhachVangLai")
    {
        @Html.Partial("~/Views/Login/_LoginPartial.cshtml")
    }
    <script src="~/js/site.js"></script>
</body>
</html>