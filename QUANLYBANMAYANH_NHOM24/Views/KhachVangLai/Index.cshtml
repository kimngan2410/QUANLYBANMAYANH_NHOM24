@model IEnumerable<QUANLYBANMAYANH_NHOM24.Models.SanPham>
@{
    var canonSanPhams = ViewBag.CanonSanPhams as List<QUANLYBANMAYANH_NHOM24.Models.SanPham>;
    var canonDanhMucCon = ViewBag.CanonDanhMucCon as List<QUANLYBANMAYANH_NHOM24.Models.DanhMucCon>;

    var sonySanPhams = ViewBag.SonySanPhams as List<QUANLYBANMAYANH_NHOM24.Models.SanPham>;
    var sonyDanhMucCon = ViewBag.SonyDanhMucCon as List<QUANLYBANMAYANH_NHOM24.Models.DanhMucCon>;

    var ongKinh = ViewBag.OngKinh as List<QUANLYBANMAYANH_NHOM24.Models.SanPham>;

}

@{
    Layout = "_KhachHangLayout";
}

<link rel="stylesheet" type="text/css" href="~/css/TrangChu.css">


<!-- CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div class="container-fluid">
    <div class="row align-items-center">
        <!-- Carousel bên trái (8 phần) -->
        <div class="col-lg-8 col-md-8 col-sm-12">
            <div id="carouselExampleIndicators" class="carousel slide h-100" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/images/poster1.png")" class="d-block w-100 h-100 object-fit-cover" alt="Banner 1">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/poster2.png")" class="d-block w-100 h-100 object-fit-cover" alt="Banner 2">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/poster3.png")" class="d-block w-100 h-100 object-fit-cover" alt="Banner 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        </div>

        <!-- Cột bên phải (4 phần) -->
        <div class="col-lg-4 col-md-4 col-sm-12">
            <img src="@Url.Content("~/images/poster_right.png")" class="img-fluid rounded shadow" alt="Ảnh bên phải">
        </div>
        </div>
        <!-- Canon Camera -->
        <div class="canon-product d-flex justify-content-between align-items-center" style=" margin-top: 80px;">
            <img src="~/images/logo-canon.png" alt="Canon" class="canon-logo" style="width: 15%;">
            <div class="see-more-button">
                <span class="button-text">Xem thêm</span>
                <i class="fa-solid fa-circle-right"></i>
            </div>
        </div>
        <div class="row product-grid" style="margin-top: 20px; margin-bottom: 65px;">
            @foreach (var sp in canonSanPhams)
            {
                <a href="@Url.Action("ChiTietSanPham", "KhachHang", new { id = sp.Idsanpham })" class="product">
                    <div class="product-card">
                        <div class="img-product">
                             <img src="@Url.Content(sp.DiachianhSp)" class="card-img-top" alt="@sp.Tensp">   
                        </div>
                        <div class="card-body text-center">
                            <h6 class="card-title">@sp.Tensp</h6>
                            <p class="card-text">@sp.Gia.ToString("N0") đ</p>
                        </div>
                    </div>
                </a>
            }
        </div>


        <!-- HÌNH ẢNH QUẢNG CÁO -->
    <div class="main-container" style="margin-top: 30px;">
            <div class="highlighted-product">
                <img src="~/images/poster_camera.jpg" alt="Camera" class="highlighted-image">
            </div>
            <div class="product-list">
                <div class="item-card">
                    <img src="~/images/qc_1.jpg" alt="GoPro" class="item-image">
                </div>
                <div class="item-card">
                    <img src="~/images/qc_2.jpg" alt="Fujifilm" class="item-image">
                </div>
                <!-- Bạn có thể thêm nhiều sản phẩm khác ở đây -->
            </div>
        </div>



        <!-- Sony Camera -->
        <div class="canon-product d-flex justify-content-between align-items-center" style=" margin-top: 80px;">
                <img src="~/images/Sony_logo.png" alt="sony" class="canon-logo" style="width: 20%; margin-right: 30px;">
            <div class="see-more-button">
                <span class="button-text">Xem thêm</span>
                <i class="fa-solid fa-circle-right"></i>
            </div>
        </div>
        <div class="row product-grid" style="margin-top: -5px; margin-bottom: 50px;">
        @foreach (var ok in sonySanPhams)
                {
            <a href="@Url.Action("ChiTietSanPham", "KhachHang", new { id = ok.Idsanpham })" class="product">
                            <div class="product-card">
                                    <div class="img-product">
                                        <img src="@Url.Content(ok.DiachianhSp)" class="card-img-top" alt="@ok.Tensp">
                                    </div>
                                    <div class="card-body text-lg-start">
                                        <h6 class="card-title">@ok.Tensp</h6>
                                        <p class="card-text">@ok.Gia.ToString("N0") đ</p>
                                   </div>
                                </div>
                    </a>
                }
            </div>




    <!-- ỐNG KÍNH -->
    <div class="canon-product d-flex justify-content-between align-items-center" style=" margin-top: 100px;">
        <h4 style="font-size: 34px; color: darkred; font-family: quicksand-bold, sans-serif; font-weight: bold;">Ống kính (Lens)</h4>
        <div class="see-more-button">
            <span class="button-text">Xem thêm</span>
            <i class="fa-solid fa-circle-right"></i>
        </div>
    </div>
    <div class="row product-grid" style="margin-top: 20px; margin-bottom: 100px;">
        @foreach (var sp in ongKinh)
        {
            <a href="@Url.Action("ChiTietSanPham", "KhachHang", new { id = sp.Idsanpham })" class="product">
                <div class="product-card">
                    <div class="img-product">
                        <img src="@Url.Content(sp.DiachianhSp)" class="card-img-top" alt="@sp.Tensp">
                    </div>
                    <div class="card-body text-lg-start">
                        <h6 class="card-title">@sp.Tensp</h6>
                        <p class="card-text">@sp.Gia.ToString("N0") đ</p>
                    </div>
                </div>
            </a>
        }
    </div>

   
   
